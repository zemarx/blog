=Post
    -id
    -author_name
    -title
    -content
    -last_time_edited
    -date_created

=Comment
    -id
    -post_id(id -> Post)
    -parent_id(id -> Comment)
    -author_name
    -content
    -date_created

//--------------------DATABASE FUNCTIONS---------------------

